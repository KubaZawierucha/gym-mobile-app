<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kubazawierucha.powerfulbodyapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MainAppTheme">
        <activity android:name=".Workout.WorkoutDetailsActivity"></activity>
        <activity android:name=".Workout.NewWorkoutActivity" />
        <activity android:name=".Workout.WorkoutListActivity" />
        <activity android:name=".Exercises.ExerciseDetailsActivity" />
        <activity android:name=".Exercises.ExerciseGroupActivity" />
        <activity android:name=".UserProfile.UserProfileActivity" />
        <activity android:name=".MusclesActivities.MuscleDetailsActivity" />
        <activity android:name=".MusclesActivities.MuscleGroupListActivity" />
        <activity android:name=".BodyActivity.BodyActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".Alarm.AlarmReceiver"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>