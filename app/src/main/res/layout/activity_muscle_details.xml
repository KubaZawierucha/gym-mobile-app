<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MusclesActivities.MuscleDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/muscle_details_muscle_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Muscle Group"
        style="@style/TitleText"/>

    <TextView
        android:id="@+id/muscle_details_muscle_simple_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple Name"
        style="@style/SubTitleText"/>

    <TextView
        android:id="@+id/muscle_details_muscle_formal_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Formal Name"
        style="@style/TitleText"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/muscle_details_muscle_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        style="@style/SubTitleText"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/muscle_details_muscle_description_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Placeholder"
        style="@style/ContentText"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="10dp"
        android:justificationMode="inter_word"/>

    </LinearLayout>
</ScrollView>